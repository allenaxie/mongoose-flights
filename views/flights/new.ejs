<%- include('../partials/header') %>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>New flight</title>
</head>

<body>
    <h2>Enter a New Flight</h2>
    <form action="/flights" method="POST">
        <label>Airline:
            <input type="text" name="airline">
        </label><br>
        <label>Airport:
            <select name="airport">
                <option value="SFO" selected>SFO</option>
                <option value="LAX" selected>LAX</option>
                <option value="SHA" selected>SHA</option>
                <option value="BKK" selected>BKK</option>
                <option value="SIN" selected>SIN</option>
            </select>
        </label><br>
        <label>Flight Number:
            <input type="text" name="flightNo">
        </label><br>
        <label>Departure date:
            <input type="datetime-local" name="departs">
        </label><br>
        <input type="submit" value="Add Flight">
    </form>
</body>

</html>